<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>


<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="it.polito.tdp.country.BordersController">
   <top>
      <Label text="Country Borders" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <HBox>
               <children>
                  <Label minWidth="40.0" text="Start" />
                  <ComboBox fx:id="boxStart" prefWidth="150.0" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <Label minWidth="40.0" text="End" />
                  <ComboBox fx:id="boxEnd" prefWidth="150.0" />
               </children>
            </HBox>
            <AnchorPane>
               <children>
                  <Button fx:id="btnCompute" mnemonicParsing="false" onAction="#doCompute" text="Compute" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
               </children>
            </AnchorPane>
            <TextArea fx:id="txtResult" prefHeight="200.0" prefWidth="300.0" />
         </children>
         <BorderPane.margin>
            <Insets top="15.0" />
         </BorderPane.margin>
      </VBox>
   </center>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</BorderPane>
